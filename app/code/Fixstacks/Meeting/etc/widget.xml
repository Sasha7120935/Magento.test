        <label translate="true">Display Agenda</label>
        <description>Display a selected Agenda on any CMS Block or Page</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true" sort_order="10" >
                <label translate="true">Title</label>
            </parameter>
            <parameter name="text" xsi:type="text" visible="true" sort_order="20" >
                <label translate="true">Text</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
